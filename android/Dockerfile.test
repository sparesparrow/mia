# Android Test Environment Dockerfile
# This provides a containerized environment for Android testing
# Note: Full instrumentation tests require Android emulator setup

FROM ubuntu:22.04

# Install basic dependencies
RUN apt-get update && apt-get install -y \
    wget \
    unzip \
    curl \
    python3 \
    python3-pip \
    openjdk-17-jdk \
    && rm -rf /var/lib/apt/lists/*

# Install Android SDK Command Line Tools
ENV ANDROID_HOME /opt/android-sdk
ENV PATH $PATH:$ANDROID_HOME/cmdline-tools/latest/bin:$ANDROID_HOME/platform-tools

RUN mkdir -p $ANDROID_HOME/cmdline-tools && \
    cd $ANDROID_HOME/cmdline-tools && \
    wget -q https://dl.google.com/android/repository/commandlinetools-linux-11076708_latest.zip && \
    unzip commandlinetools-linux-11076708_latest.zip && \
    mv cmdline-tools latest && \
    rm commandlinetools-linux-11076708_latest.zip

# Accept Android SDK licenses
RUN yes | $ANDROID_HOME/cmdline-tools/latest/bin/sdkmanager --licenses

# Install minimal Android SDK components for APK validation
RUN $ANDROID_HOME/cmdline-tools/latest/bin/sdkmanager \
    "platform-tools" \
    "build-tools;34.0.0" \
    "platforms;android-34"

# Install Python testing dependencies
RUN pip3 install --no-cache-dir \
    requests \
    pytest \
    apkutils \
    androguard

# Create workspace
WORKDIR /workspace

# Copy test scripts
COPY . /workspace/

# Default command
CMD ["python3", "--version"]